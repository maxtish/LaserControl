<Window x:Class="LaserPanelTCP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Laser Panel TCP" Height="300" Width="350">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button x:Name="LaserButton"
                    Content="START LASER"
                    Width="200"
                    Height="60"
                    Margin="0,0,0,10"
                    Click="Button_Click"/>
            <Label x:Name="StatusLabel"
       Content="Отключено"
       FontSize="14"
       Margin="0"
       Foreground="Gray"/>
            <TextBox x:Name="LogBox"
                     Width="300"
                     Height="150"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>

        </StackPanel>
    </Grid>
</Window>